#!/usr/bin/env ruby

# frozen_string_literal: true

require_relative '../lib/node'
require_relative '../lib/dsl/spec'
require_relative '../lib/runner'
require 'prettyprint'
require 'tty-progressbar'
require 'tty-logger'

begin
  args = ARGV.group_by { _1 =~ /^-/ }
  raise Suburb::RuntimeError, 'No file task given.' unless args[nil]

  runner = Suburb::Runner.new
  args[nil].each do |file|
    runner.run(File.expand_path(file), force: Array(args[0]).include?('-f'))
  end
rescue Suburb::RuntimeError => e
  log = TTY::Logger.new
  log.error e
  log.info 'Complete log: cat ./suburb.log'

  log.info ''"
  Usage:

  suburb <path-of-file-to-build> [-f|--force]

  "''
end
